<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="#FFFFFF"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:id="@+id/list_layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="#FFFFFF">

            <TextView
                android:id="@+id/item_list_title_prefix"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:textSize="18sp"
                android:textColor="#21759b"
                tools:text="Title" />

            <TextView
                android:id="@+id/item_list_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:layout_toEndOf="@id/item_list_title_prefix"
                android:textSize="18sp"
                android:textColor="#21759b"
                tools:text="Title" />

            <TextView
                android:id="@+id/item_list_speciality"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_list_title"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:textSize="14sp"
                android:textColor="#21759b" />

            <View
                android:id="@+id/center_divider"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/item_list_speciality"
                android:background="@android:color/darker_gray" />

            <ImageView
                android:id="@+id/line1_icon"
                android:layout_centerVertical="true"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="2dp"
                android:layout_marginBottom="4dp"
                android:layout_alignParentStart="true"
                android:scaleType="centerInside"
                android:layout_below="@+id/center_divider"
                android:src="@mipmap/phone1"/>

            <TextView
                android:id="@+id/item_list_line1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/center_divider"
                android:layout_toRightOf="@+id/line1_icon"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="4dp"
                android:textSize="14sp"
                android:textColor="#21759b" />

            <TextView
                android:id="@+id/item_list_line2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_list_line1"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="2dp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/item_list_line3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_list_line2"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="2dp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/item_list_line4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_list_line3"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="2dp"
                android:textColor="#000000" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>